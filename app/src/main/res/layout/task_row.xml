<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardElevation="5dp"
    android:layout_columnWeight="1"
    android:orientation="vertical"
    android:layout_rowWeight="1"
    android:id="@+id/layout_cardview"
    android:layout_margin="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="10dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="5dp"
        android:orientation="horizontal">


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:padding="5dp">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="30dp"
                    android:layout_height="30dp"
                    android:id="@+id/task_logo_img"
                    android:layout_margin="2dp"
                    android:layout_gravity="center"
                    android:src="@drawable/task_logo"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Task Tittle"
                android:layout_marginLeft="5dp"
                android:id="@+id/task_name_txt"
                android:textSize="16dp"
                android:textStyle="bold"
                android:layout_gravity="center|left"/>

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_gravity="center">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="Category"
                    android:layout_weight="1"
                    android:id="@+id/task_category_txt"
                    android:textSize="16dp"
                    android:layout_gravity="center|left"/>

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_margin="2dp"
                    android:id="@+id/points_logo_img"
                    android:layout_gravity="center"
                    android:src="@drawable/points_logo"/>

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="0"
                    android:id="@+id/task_point_txt"
                    android:textSize="16dp"
                    android:layout_gravity="center|left"/>
            </LinearLayout>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="date"
                android:layout_weight="1"
                android:id="@+id/task_date_txt"
                android:textSize="16dp"
                android:layout_gravity="center|left"/>
        </LinearLayout>

    </LinearLayout>

</androidx.cardview.widget.CardView>